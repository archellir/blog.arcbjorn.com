{
  "nodeModulesDir": "auto",
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "deno run -A npm:vite",
    "build": "deno run -A npm:vite build",
    "start": "deno serve -A _fresh/server.js",
    "oxide": "deno install --allow-scripts=npm:@tailwindcss/oxide@4.1.13",
    "test": "deno test --allow-read --allow-env",
    "update": "deno run -A -r jsr:@fresh/update ."
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ],
      "exclude": [
        "react-no-danger"
      ]
    }
  },
  "exclude": [
    "**/_fresh/*",
    "data/posts/*"
  ],
  "imports": {
    "fresh": "jsr:@fresh/core@^2.1.1",
    "preact": "npm:preact@^10.27.2",
    "@preact/signals": "npm:@preact/signals@^2.3.1",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.4",
    "prismjs": "npm:prismjs@^1.30.0",
    "vite": "npm:vite@^7.1.3",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12",
    "$std/": "https://deno.land/std@0.216.0/",
    "$gfm": "https://deno.land/x/gfm@0.6.0/mod.ts",
    "js-cookie": "https://esm.sh/js-cookie@3.0.1",
    "url_parse": "https://deno.land/x/url_parse@1.1.0/mod.ts",
    "querystring": "https://deno.land/x/querystring@v1.0.2/mod.js",
    "https://deno.land/x/emoji@0.3.0/": "https://deno.land/x/emoji@0.3.1/",
    "https://deno.land/x/emoji@0.2.1/": "https://deno.land/x/emoji@0.3.1/"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": [
      "vite/client"
    ]
  }
}
